            margin-left: 100px;
        }

        body {
            font-family: "Lato", sans-serif;
        }

        .sidenav {
            width: 190px;
            position: fixed;
            z-index: 1;
            top: 20px;
            left: -10px;
            background: black;
            overflow-x: hidden;
            padding: 8px 0;
            height: 700px;
        }

            .sidenav a {
                padding: 50px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: white;
                display: block;
            }

